generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blogs {
  id        Int      @id @default(autoincrement())
  title     String
  thumbnail String
  url       String
  tags      String
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  thumbnail   String?  @db.VarChar(500) // Making it nullable if not all projects have thumbnails
  url         String   @db.VarChar(500)
  tags        String   @db.VarChar(500)
  description String   @db.Text
}
